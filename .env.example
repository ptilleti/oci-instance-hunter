# OCI Configuration
# Copy this file to .env and fill in your values

# Your OCI user OCID (starts with ocid1.user.oc1..)
OCI_USER_OCID=ocid1.user.oc1..aaaaaaaa...

# Your OCI tenancy OCID (starts with ocid1.tenancy.oc1..)
OCI_TENANCY_OCID=ocid1.tenancy.oc1..aaaaaaaa...

# Your OCI region (e.g., us-ashburn-1, us-phoenix-1, eu-frankfurt-1)
OCI_REGION=us-ashburn-1

# Fingerprint of your API key
OCI_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99

# Path to your private key file (absolute or relative to project root)
OCI_KEY_FILE=config/oci_api_key.pem

# Compartment OCID where instance will be created (usually same as tenancy for root)
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..aaaaaaaa...

# Instance Configuration
INSTANCE_DISPLAY_NAME=my-always-free-instance

# Availability Domain (e.g., ABCD:US-ASHBURN-AD-1)
# Get this from OCI console or use the helper script
AVAILABILITY_DOMAIN=ABCD:US-ASHBURN-AD-1

# Shape (VM.Standard.A1.Flex for ARM or VM.Standard.E2.1.Micro for AMD)
INSTANCE_SHAPE=VM.Standard.A1.Flex

# For Flex shapes - CPU and Memory
INSTANCE_OCPUS=4
INSTANCE_MEMORY_IN_GBS=24

# Subnet OCID (from your VCN)
SUBNET_OCID=ocid1.subnet.oc1..aaaaaaaa...

# Image OCID (OS image - get from OCI console or helper script)
IMAGE_OCID=ocid1.image.oc1..aaaaaaaa...

# SSH public key file path (for instance access)
SSH_PUBLIC_KEY_FILE=config/ssh_key.pub

# Boot Volume Size (default 50GB, max for free tier depends on shape)
BOOT_VOLUME_SIZE_IN_GBS=50

# Retry Configuration
CHECK_INTERVAL_SECONDS=300
MAX_RETRIES=0
